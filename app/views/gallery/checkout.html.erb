<section class="shop_section layout_padding">
    <div class="container" >
<%= notice %>
<h5>Total amount : Rs.<%= session[:amount] %></h5>
<%= form_with do |f| %>
<section class="contact_section ">
 <h6> <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name ,:class=>"col-md-6 col-lg-5 px-0"%>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name,:class=>"col-md-6 col-lg-5 px-0" %>
  </div>
  <div class="field">
    <%= f.label :credit_card_no %><br />
    <%= f.text_field :credit_no,:class=>"col-md-6 col-lg-5 px-0" %>
  </div>
  <div class="field">
    <%= f.label :date_of_expiry %><br />
    	<select name="month" id="check_out_month">
		<option selected value="01">Janurary 
		<option  value="02">Feburary
		<option  value="03">March
		<option  value="04">April 
		<option  value="05">May 
		<option  value="06">June 
		<option  value="07">July 
		<option  value="08">August 
		<option  value="09">September 
		<option  value="10">October 
		<option  value="11">November 
		<option  value="12">December 
		</select>
		<select name="year" id="check_out_year">
		<option selected value="2021">2021
		<option  value="2022">2022
		<option  value="2023">2023
		<option  value="2024">2024
		<option  value="2025">2025
	</select>
  </div>
  <div class="field">
    <%= f.label :payment_type %><br />
    <select name="payment_type"><option value="visa">Visa</option></option><option value="mastercard">Master Card</option></select>
    </div>
  <div class="field">
    <%= f.label :verification_number %><br />
    <%= f.text_field :verification_number, :size => 2,:class=>"col-md-6 col-lg-5 px-0" %>
  </div></h6>
  <br/><br/>
</section>
  <div class="actions">
    <%= f.submit "Submit", :class=>"btn btn-danger"%>
  </div>
  <% end %>
</div>
</section>