<section class="shop_section layout_padding">
    <div class="container" >
<% unless cart.line_items.empty? %>
<h2>YOUR CART</h2>
<style>
#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 80%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}



#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
</style>
<table id="customers">
	<tr>
		<th>Quanitity</th>
		<th>product</th>
		<th>Amount</th>
		
	</tr>
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2" align="middle" >Total amount </td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>
<% session[:amount] = cart.total_price %>
<div><%= button_to "empty cart",cart, :method =>:delete, :class=>"btn btn-success",:confirm => "Are you sure?" %></div>
<p><br>
	<%= link_to "continue shopping",:controller=>"gallery",:action=>"index",:class=>"link-success"%>
	<% if user_signed_in? %>
	<%= link_to "checkout",:controller=>"gallery",:action=>"checkout"%>
	<% else %>
	<%= link_to "checkout",admin_login_path %>
	<% end %>

</p>
<% end %>
</div>
</section>